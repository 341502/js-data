{
  "name": "js-data",
  "description": "Robust, framework-agnostic in-memory data store.",
  "version": "2.8.2",
  "homepage": "http://www.js-data.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-data/js-data.git"
  },
  "author": {
    "name": "Jason Dobry",
    "url": "http://www.pseudobry.com",
    "email": "jason.dobry@gmail.com"
  },
  "license": "MIT",
  "main": "./dist/js-data-debug.js",
  "keywords": [
    "orm",
    "odm",
    "model",
    "schema",
    "rest",
    "angular",
    "ember",
    "backbone",
    "react",
    "firebase",
    "datastore",
    "store",
    "database",
    "adapter",
    "http",
    "localstorage"
  ],
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "__callCheck__",
      "__get__",
      "__inherits__",
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "scripts": {
    "lint": "standard src/**/*.js test/unit/**/*.js lib/mindex/**.js",
    "webpack": "webpack --config webpack.config.js --colors",
    "helpers": "node scripts/helpers.js",
    "bundle": "npm run webpack && npm run helpers",
    "min": "uglifyjs dist/js-data.js -o dist/js-data.min.js --source-map dist/js-data.min.map -v -m -c --screw-ie8",
    "debug": "node scripts/debug.js",
    "version": "node scripts/version.js",
    "banner": "node scripts/banner.js",
    "gzip": "echo gzipped size: $(cat dist/js-data.min.js | gzip -f9 | wc -c)kb",
    "build": "npm run lint && npm run bundle && npm run debug && npm run min && npm run version && npm run banner && npm run gzip",
    "karma": "karma start",
    "mocha": "mocha --timeout 20000 --reporter spec mocha.start.js",
    "test": "npm run build && npm run mocha",
    "ci": "npm test && cat ./coverage/PhantomJS*/lcov.info | coveralls || true && cat ./coverage/PhantomJS*/lcov.info | codacy-coverage || true",
    "ts": "tsc -m umd -t ES5 --experimentalDecorators src/index.ts"
  },
  "devDependencies": {
    "babel-core": "6.1.21",
    "babel-eslint": "4.1.5",
    "babel-helpers": "6.1.20",
    "babel-loader": "6.1.0",
    "babel-plugin-transform-runtime": "6.1.18",
    "babel-preset-es2015": "6.1.18",
    "babel-preset-stage-1": "6.1.18",
    "babel-runtime": "6.1.18",
    "chai": "3.4.1",
    "codacy-coverage": "1.1.3",
    "coveralls": "2.11.4",
    "es6-promise": "3.0.2",
    "karma": "0.13.15",
    "karma-browserstack-launcher": "0.1.7",
    "karma-chai": "0.1.0",
    "karma-coverage": "0.5.3",
    "karma-junit-reporter": "0.3.8",
    "karma-mocha": "0.2.1",
    "karma-phantomjs-launcher": "0.2.1",
    "karma-sinon": "1.0.4",
    "mocha": "2.3.3",
    "mout": "0.11.1",
    "phantomjs": "1.9.18",
    "sinon": "1.17.2",
    "standard": "5.3.1",
    "uglify-js": "2.6.0",
    "webpack": "1.12.6",
    "yabh": "1.1.0"
  }
}
